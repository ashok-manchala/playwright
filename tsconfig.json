{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["@playwright/test"]
  },
  "include": [
    "tests/**/*.ts",
    "pageobjects/**/*.ts",
    "utils/**/*.ts",
    "env/**/*.ts",
    "test-data/**/*.ts",
    "playwright.config.ts"
  ]
}
